<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/double_padding"
    android:background="@android:color/white"
    >
    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/list_image_size"
        android:layout_height="@dimen/list_image_size"
        android:contentDescription="@string/user_image" />
    <TextView android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_text_size"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView android:id="@+id/label_public_repos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/public_repos"
        android:text="@string/public_repos"
        android:textSize="@dimen/list_text_size"
        />
    <TextView android:id="@+id/public_repos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView android:id="@+id/label_public_gists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/public_gists"
        android:text="@string/public_gists"
        android:textSize="@dimen/list_text_size"
        />
    <TextView android:id="@+id/public_gists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView android:id="@+id/label_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/num_followers"
        android:text="@string/followers"
        android:textSize="@dimen/list_text_size"
        />
    <TextView android:id="@+id/num_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView android:id="@+id/label_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/num_following"
        android:text="@string/following"
        android:textSize="@dimen/list_text_size"
        />
    <TextView android:id="@+id/num_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_text_size"/>
    </LinearLayout>
</LinearLayout>